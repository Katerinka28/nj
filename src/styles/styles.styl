
@import './fonts'
@import './font-image.css'
@import './reset.css'


* 
    margin 0
    padding 0
    box-sizing border-box

body 
    font-size 14px
    font-family Proxima-Nova-Regular
.clearfix:before,.clearfix:after 
    content " "
    display table
    width 0
    height 0
    visibility hidden
.clearfix:after 
    clear both
   
.container
    width 1200px
    margin 0 auto
.header
    width 100%
    height 109px
    background-color #1c3051
    border-bottom-style solid
    border-bottom-width 2px  
    border-bottom-color #ff7101
    &__logo
        display block
        float left
        margin-top 28px
    &__cities
        display block
        border-left-color #b5c2d6
        border-left-width 1px
        border-left-style solid 
        float left 
        margin-top 25px
        margin-left 10px
    &__city
        display block
        text-transform uppercase
        list-style-type none
        font-family Montserrat-Regular
        font-size 1em
        color #b5c2d6
        padding-left 10px
    &__menu
        display block
        float left
        margin-top 36px
        line-height 32.927px
        padding-left 80px
        &:first-child
            padding-left 0
        &:last-child
            padding-right 0
    &__link
        display block
        font-family Montserrat-Regular
        font-size 1em
        text-transform uppercase
        list-style-type none
        float left
        padding 0 8px
    &__link a
        text-decoration none
    &__link a:hover
        color #000000
    &__link a:active
        color #ffffff
    &__link a:visited
        color #ffffff    
    .telephone
        display block
        padding-top 35px
        &__icon
            display block
            float right   
        &__select
            display block
            float right
            font-family Montserrat-Black
            font-size 1.55em
            background transparent
            color #ffffff
.top
    background url('../images/top-bg.png') no-repeat center
    width 100%
    .top-left
        width 57%
        float left
        &__title
            display block
            font-family Montserrat-Black
            font-size 6.7em
            text-transform uppercase
            color #ffffff
            // width 56.7%
            // height auto
            padding-top 70px
            

        &__text
            font-size 2.33em
            font-family Proxima-Nova-Black
            color #1c3051
            text-transform uppercase
            padding-top 20px
            padding-bottom 50px
            // width 56.7%
            // height auto
            
        &__btn
            display block
            width 266px
            height 66px
            padding-left 66px
            background url("../images/top-button.png") no-repeat left
            background-size 20%
            border none
            border-radius 50px
            background-color #ff7101
            line-height 65px
            font-family Montserrat-Black        
            color #ffffff
            font-size 1.9em
            text-decoration none
            
    .top-right
        width 37%
        float right
        &__image
            display block
            height auto
            width 100%
            // float right
    
        
        
.callback
    width 100%
    height auto
    background url('../images/form-bg.png') no-repeat
    .callback-picture
        width 50%
        float left
        position relative
        &__image
            display block
            transform translateX(-36%) translateY(-17%)
    .form-title
        width 63%
        float right
        position absolute
        left 34%
        transform translateY(104%)
        &__title
            display block
            font-size 1.5em
            text-transform uppercase
            text-align left
            font-family Proxima-Nova-Bold
            color #ffffff
        &__text
            display block
            font-size 1.5em
            text-transform uppercase
            text-align left
            font-family Proxima-Nova-Regular
            color #ffffff
    .form   
        width 80% 
        float right
        position absolute
        left 34%
        transform translateY(245%)
        
        &__name
            display block
            background transparent
            border-radius 50px
            float left
            width 306px
            height 66px
            margin-right 30px
            padding-left 10px
            font-size 1em
        &__telephone
            display block
            border-radius 50px
            background transparent
            float left
            width 306px
            height 66px
            padding-left 10px
            margin-right 30px
            font-size 1em
    .btn-send    
        background #ffffff
        width 196px
        height 66px
        font-size 1em
        border-radius 50px
        border none
        text-transform uppercase
            

        
h1
    text-transform uppercase
    font-size 2.5em
    color #1c3051
    font-weight 700
    text-align center
    margin-bottom 50px

.services
    width 100%
    background-color #ffffff
    &__title-local
        text-transform uppercase
        font-size 2em
        color #1c3051
        padding 0 15px
        position absolute
        background #ffffff
        left 30%
        transform translateY(-40%)

    &__title-long
        text-transform uppercase
        font-size 2em
        color #1c3051
        padding 0 15px
        position absolute
        background #ffffff
        left 53%
        transform translateY(-40%)

    .services-item
        width 100%
        height auto
        border 1px solid #ff7101
        padding 55px 0px 51px 164px
        position relative
        margin-bottom 50px        
        .items-local
            height auto
            width 43%
            float left
            &__item
                width 33%
                float left
                &__image
                    width 100%
                &__title
                    text-align center
                    font-size 1em
                    color #1c3051
                    text-transform uppercase
        .items-long
            height auto
            width 43%
            float left
            &__item
                width 33%
                float left
                &__title
                    text-align center
                    font-size 1em 
                    color #1c3051
                    text-transform uppercase              
                &__image
                    width 100%
                &:first-child
                    padding-left 0
                    
              
            
.promotion
    background url('../images/form-getting-quote-bg.png') no-repeat
    width 100%
    .registration
        display block
        width 30%
        float left
        &__title
            display block
            font-family Proxima-Nova-Bold
            font-size 1.5em
            text-transform uppercase
            color #ffffff
            margin 50px 0 0
            font-weight 700
        &__text
            display block
            padding-top 50px
            font-family Proxima-Nova-Regular
            color #ffffff
            font-weight 400
            line-height 25.644px
            font-size 1.15em
            
    .form
        display block
        width 60%
        float right
        &__line-top
            width 36.9%
            height 12px
            background #ff7101
            position absolute
            top 187.2%
        &__line-bottom
            width 36.9%
            height 12px
            background #ff7101
            position absolute
            top 235%

        &__title-form
            display block
            text-transform uppercase
            color #ffffff
            font-size 2.5em
            font-family Proxima-Nova-Black
            margin 50px 0 0
            
        &__name
            display block
            width 48.8%
            height 50px
            float left
            margin 2.4% 2.4% 2.4% 0
            background transparent
            border-radius 50px
            color #ffffff
            padding-left 10px
        &__email
            display block
            width 48.8%
            height 50px
            background transparent
            border-radius 50px
            margin 2.4% 0 2.4% 0
            color #ffffff
            padding-left 10px
        &__phone
            display block
            width 48.8%
            height 50px
            float left
            margin 0 2.4% 2.4% 0
            background transparent
            border-radius 50px
            color #ffffff
            padding-left 10px
        &__date
            display block
            width 48.8%
            height 50px
            background transparent
            border-radius 50px
            margin 0 0 2.4% 0
            color #ffffff
            padding-left 10px
        &__zip-from
            display block
            width 48.8%
            height 50px
            float left
            margin 0 2.4% 2.4% 0
            background transparent
            border-radius 50px
            color #ffffff
            padding-left 10px
        &__zip-to
            display block
            width 48.8%
            height 50px
            background transparent
            border-radius 50px
            margin 0 0 2.4% 0
            color #ffffff
            padding-left 10px
        &__select
            display block
            height 50px
            width 100%
            background transparent
            border-radius 50px
            margin 0 0 2.4% 0
            color #ffffff
            & option 
                color #ffffff
                background-color #101e30

        &__message

            display block
            height 120px
            width 100%
            background transparent
            border-radius 25px
            margin 0 0 2.4% 0
            padding-left 10px
            color #ffffff
        &__question
            display block
            color #ffffff
            font-size 1em
            font-family Montserrat-Regular
        &__aunser
            display block
            height 50px
            width 48.8%
            background transparent
            border-radius 50px
            margin 0 0 2.4% 0
            float left
            padding-left 10px
            color #ffffff
        &__send
            display block
            width 48.8%
            height 50px
            background-color #ff7101
            color #ffffff
            float right
            border-radius 50px
            text-align center
            padding-top 15px
            font-family Montserrat-Black
            

  

#map
    width 100%
    height 400px
    background-color grey
    

