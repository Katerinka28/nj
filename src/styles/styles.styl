
@import './fonts'
@import './font-image.css'
@import './reset.css'


* 
    margin 0
    padding 0
    box-sizing border-box

body 
    font-size 14px
    font-family Proxima-Nova-Regular
.clearfix:before,.clearfix:after 
    content " "
    display table
    width 0
    height 0
    visibility hidden
.clearfix:after 
    clear both
   
.container
    width 1200px
    margin 0 auto
.header
    width 100%
    height 109px
    background-color #1c3051
    border-bottom-style solid
    border-bottom-width 2px  
    border-bottom-color #ff7101
    padding-top 25px
    &__logo
        display block
        float left

    &__cities
        display block
        border-left-color #b5c2d6
        border-left-width 1px
        border-left-style solid 
        float left 
        margin-left 10px
    &__city
        display block
        text-transform uppercase
        list-style-type none
        font-family Montserrat-Regular
        font-size 1em
        color #b5c2d6
        padding-left 10px
    &__menu
        display block
        float left
        line-height 32.927px
        padding-left 80px
        &:first-child
            padding-left 0
        &:last-child
            padding-right 0
    &__link
        display block
        font-family Montserrat-Regular
        font-size 0.97em
        text-transform uppercase
        list-style-type none
        float left
        padding 6px 8px 0
        & a
            text-decoration none
            &:hover
                color #ff7101
            &:active
                color #000000
            &:visited
                color #ffffff   
    .telephone
        display block
        padding-top 6px 
        &__icon
            display block
            float right
            width 24px
              
        &__select
            display block
            float right
            font-family Montserrat-Black
            font-size 1.55em
            background transparent
            color #ffffff
            border none
            & option
                color #000000
            
.top
    background url('../images/top-bg.png') no-repeat
    width 100%
    .top-left
        width 57%
        float left
        &__title
            display block
            font-family Montserrat-Black
            font-size 6.7em
            text-transform uppercase
            color #ffffff
            // width 56.7%
            // height auto
            padding-top 70px
            

        &__text
            font-size 2.33em
            font-family Proxima-Nova-Black
            color #1c3051
            text-transform uppercase
            padding-top 20px
            padding-bottom 50px
            // width 56.7%
            // height auto
            
        &__btn
            display block
            width 266px
            height 66px
            padding-left 76px
            background url("../images/top-button.png") no-repeat 6%
            background-size 16%
            border none
            border-radius 50px
            background-color #ff7101
            line-height 65px
            font-family Montserrat-Black        
            color #ffffff
            font-size 1.4em
            text-decoration none
            &:hover
                background-color #1c3051
                border 2px solid #1c3051

                cursor pointer
                transition 1s
                
    .top-right
        width 37%
        float right
        &__image
            display block
            height auto
            width 100%
            // float right
    
        
        
.callback
    width 100%
    height auto
    background url('../images/form-bg.png') no-repeat
    .callback-picture
        width 50%
        float left
        position relative
        &__image
            display block
            transform translateX(-36%) translateY(-17%)
    .form-title
        width 63%
        float right
        position absolute
        left 34%
        transform translateY(104%)
        &__title
            display block
            font-size 1.5em
            text-transform uppercase
            text-align left
            font-family Proxima-Nova-Bold
            color #ffffff
        &__text
            display block
            font-size 1.5em
            text-transform uppercase
            text-align left
            font-family Proxima-Nova-Regular
            color #ffffff
    .form   

        float right
        position absolute
        left 34%
        transform translateY(245%)
        
        &__name
            display block
            background transparent
            border-radius 50px
            float left
            width 306px
            height 66px
            margin-right 30px
            padding-left 25px
            font-size 1em
            outline none
            border 2px solid #ffffff
            
            &::-webkit-input-placeholder {
                color: #ffffff;
            }
            &:-moz-placeholder {
                color: #ffffff;
            }
            &::-moz-placeholder {
                color: #ffffff;
            }
            &:-ms-input-placeholder {
                color: #ffffff;
            }
            
            &:focus::-webkit-input-placeholder {color: transparent;}
            &:focus::-moz-placeholder {color: transparent}
            &:focus:-moz-placeholder {color: transparent}
            &:focus:-ms-input-placeholder {color: transparent}
        &__telephone
            display block
            border-radius 50px
            background transparent
            float left
            width 306px
            height 66px
            padding-left 25px
            margin-right 30px
            font-size 1em
            outline none
            border 2px solid #ffffff
            &::-webkit-input-placeholder {
                color: #ffffff;
            }
            &:-moz-placeholder {
                color: #ffffff;
            }
            &::-moz-placeholder {
                color: #ffffff;
            }
            &:-ms-input-placeholder {
                color: #ffffff;
            }
            &:focus::-webkit-input-placeholder {color: transparent;}
            &:focus::-moz-placeholder {color: transparent}
            &:focus:-moz-placeholder {color: transparent}
            &:focus:-ms-input-placeholder {color: transparent}
    .btn-send    
        background #ffffff
        width 196px
        height 66px
        font-size 1em
        border-radius 50px
        border none
        text-transform uppercase
        outline none
        font-family Montserrat-Black
        &:hover
            background-color #ff7101
            border 2px solid #ffffff
            color #ffffff
            cursor pointer
            transition 1s
             
         

            
