            margin-bottom 15px 
            width 306px
    .services
        width 100%
        h1
            padding-top 15px
        &__title-local
            text-align center
            left 18%
        &__title-long
            left 1%
            transform translateY(23%)
            text-align center
        .services-item
            width 100%
            height auto
            padding 85px
            .items-local
                width 100%
                float none
                &__item
                    width 154px
                    height 186px
                    float none
                    &__image
                        width 100%
            .items-long     
                width 100%
                float none
                &__item
                    width 154px
                    height 186px
                    &__image
                        width 100%
    .form
        width 100%
        &__line-top
            display none
        &__line-bottom
            display none
    .promotion
        width 100%
        height auto
        background-color #112042
        .registration
            width 100%
            float none
