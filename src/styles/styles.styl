
@import './fonts'
@import './font-image.css'
// @import './reser.css'


* 
    margin 0
    padding 0
    box-sizing border-box

body 
    font-size 14px
    font-family Proxima-Nova-Regular
.header
    width 100%
    background-color #1c3051
    border-bottom-style solid
    border-bottom-width 2px  
    border-bottom-color #ff7101
    
.container
    width 320px
    margin 0 auto
    height auto    
.header
    &__logo
        display block
        float left
        width 30%
        height auto
           
    &__cities
        display none
        border-left-color #000000
        border-left-width 1px
        border-left-style solid 
        float left 
        width 30%
    &__city
        display block
        text-transform uppercase
        list-style-type none
        float left
        font-family Montserrat-Regular
        font-size 0.4em
    &__menu
        display inline-block
        width 100%
        &:first-child
            padding-left 0
        &:last-child
            padding-right 0
    &__link
        display block
        font-family Montserrat-Regular
        font-size 0.71em
        text-transform uppercase
        list-style-type none
        float left
        padding 0 1.61%
    &__link a
        text-decoration none
    &__link a:hover
        color #000000
    &__link a:active
        color #ffffff
    &__link a:visited
        color #ffffff
    
.header--telephone
    display block
    float right
.header__telephone--icon
    display block
    float right
    left (-50%)
    transform translateY(-230%)
    width 5%
    
.header__telephone--select
    display block
    float right
    position absolute
    left 45%
    transform translateY(-200%)
    font-family Montserrat-Regular
    font-size 1em
    background transparent
.top
    width 100%
    background url('../images/top-bg.png') no-repeat center
    height auto
.top__slogan
    height 180px
.top__slogan--image
    display block
    float right
    width 39.9%
    height auto

.top__slogan--title
    display block
    font-family Montserrat-Black
    width 61%
    font-size 1.6em
    padding 7.4% 5% 1% 0
    text-transform uppercase
    color #ffffff
.top__slogan--text
    width 61%
    font-size 0.55em
    padding 0 5% 5% 0
    font-family Proxima-Nova-Black
    color #1c3051
    text-transform uppercase
.button
    display block
    width 23%
    height 10%
    background url("../images/top-button.png") no-repeat left
    background-size 15%
    border none
    border-radius 50px
    background-color #ff7101
    margin 0 0
    line-height 20px
  
.top__slogan--btn
    font-family Montserrat-Black        
    color #ffffff
    font-size 0.01em
    text-decoration none
    padding-left 15px
.callback
    width 100%
    height auto
    background url('../images/form-bg.png') no-repeat
    &__image
        display block
        width 57%
        position absolute
        right 46.7%
    &__title
        display block
        width 60%
        font-size 0.4em
        text-transform uppercase
        float right
    &__text
        float right 
        display block
        width 60%
        font-size 0.2em
        text-transform uppercase
    &__form-name
        float right 
        display block
        background transparent
        border-radius 50px
    &__form-telephone
        float right 
        display block
        border-radius 50px
    &__btn-send    
        background #ffffff
        width 50px
        height 25px
    &--blue
        background url('../images/form-23.png') no-repeat
h1
    text-transform uppercase
    
.services
    &__item-local
        height 200px
        width 100%

  

#map
    width 100%
    height 400px
    background-color grey


@media screen and (min-width: 480px) 
    .container
        width 310px        
        padding 0 5px
@media screen and (min-width: 720px) 
    .container
        width 690px
@media screen and (min-width: 960px) 
    .container
        width 930px
@media screen and (min-width: 1200px) 
    .container
        width 1170px



    
