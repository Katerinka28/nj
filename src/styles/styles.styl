        width 310px
        margin 0 auto
        padding 0 10px
    .header
        width 100%
        &__logo
            width 50%
            margin-top 17px
        &__city
            display none
        &__link
            font-size 1.2em
            padding-left 14px
            text-align center
            &:first-child
                margin-left 17px
        &__menu
            text-align center
            margin-top 5px
            padding 5px 
            line-height 22px

        .telephone
            position absolute
            right 0%
            padding-top 13px
            &__select
                font-size 1em
    
    .top
        width 100%
        height auto
        .top-left
            width  100%
            &__title
                width 100%
                font-size 3.1em
                padding-top 10px

            &__text
                width 100%
                padding-bottom 10px
                font-size 1.73em
            &__btn
                margin-bottom 10px
                background-size 15%

        .top-right
            display none   
    .callback
        height auto
        .callback-picture
            display none
        .form-title
            width 100%
            left 0
            transform translateX(0%)
            line-height 20px
            padding 15px 5px 15px 5px
            position relative
            
        .form
            left 0%
            transform translateY(0%)
            position relative
            float none
            &__name
                height 50px
                float none
                margin 0
